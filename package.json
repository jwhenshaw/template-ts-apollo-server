{
  "name": "@template/api-todo",
  "version": "1.0.0",
  "private": true,
  "description": "Service responsible for todo lists (template service)",
  "author": "James Henshaw",
  "license": "MIT",
  "main": "lib/start.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "apollo:push": "apollo service:push --serviceURL=http://api-todo --serviceName=api-todo --endpoint http://api-todo:4046",
    "build": "yarn build:ts",
    "build:ts": "tsc --build src --verbose",
    "dev": "yarn build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch:ts\" \"yarn watch:node\"",
    "genTypes": "graphql-codegen --config codegen.yml",
    "lint": "eslint .",
    "setup": "yarn && node setup.helper.js",
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/start.js",
    "start:local": "NODE_ENV=development CONFIG_ENV=local yarn start",
    "test": "yarn test:unit && yarn test:integration",
    "test:integration": "jest integration --runInBand --setupTestFrameworkScriptFile=\"<rootDir>/jest.setupAfterEnv.ts\"",
    "test:staged": "echo true",
    "test:unit": "jest src",
    "test:watch": "jest --watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch:ts\" \"yarn watch:node\"",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch:ts\" \"yarn serve:debug\"",
    "watch:node": "nodemon -r ./tsconfig-paths-bootstrap.js dist/start.js",
    "watch:test": "yarn test --watchAll",
    "watch:ts": "yarn build:ts --watch"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.13.1",
    "@graphql-codegen/typescript": "1.13.1",
    "@graphql-codegen/typescript-document-nodes": "1.13.1",
    "@graphql-codegen/typescript-resolvers": "1.13.1",
    "@types/convict": "4.2.1",
    "@types/express": "4.17.3",
    "@types/graphql-iso-date": "3.3.3",
    "@types/jest": "25.1.4",
    "@types/mongoose": "5.7.11",
    "@types/mongoose-paginate": "5.0.8",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "concurrently": "5.3.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-plugin-import": "2.22.1",
    "faker": "5.1.0",
    "graphql-request": "3.3.0",
    "jest": "25.1.0",
    "jest-junit": "10.0.0",
    "jsonwebtoken": "8.5.1",
    "lodash.merge": "4.6.2",
    "nodemon": "2.0.2",
    "rimraf": "3.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@apollo/federation": "0.13.2",
    "@typegoose/typegoose": "6.4.0",
    "apollo-datasource": "0.7.0",
    "apollo-datasource-rest": "0.9.3",
    "apollo-server": "2.14.3",
    "apollo-server-core": "2.14.3",
    "convict": "5.2.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "graphql": "14.6.0",
    "graphql-iso-date": "3.6.1",
    "graphql-tag": "2.10.3",
    "moment": "2.24.0",
    "mongoose": "5.9.5",
    "mongoose-paginate": "5.0.3",
    "serialize-error": "6.0.0",
    "tsconfig-paths": "3.9.0",
    "typegoose": "5.9.1",
    "uuid": "7.0.2"
  },
  "jest-junit": {
    "outputDirectory": "./reports/junit",
    "outputName": "./js-test-results.xml"
  }
}
